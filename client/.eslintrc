{
	"extends": [
		"plugin:vue/essential",
		"@vue/typescript"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-console": "off",
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": [
			"off"
		],
		"semi": [
			"off",
			"never"
		],
		"quotes": [
			"off",
			"single"
		]
	},
	"parserOptions": {
		"parser": "@typescript-eslint/parser",
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true
		},
		"ecmaVersion": 2018
	},
	"overrides": [
		{
			"files": [
				"**/__tests__/*.{j,t}s?(x)",
				"**/tests/unit/**/*.spec.{j,t}s?(x)"
			],
			"env": {
				"jest": true
			}
		}
	]
}